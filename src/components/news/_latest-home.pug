// NEWS
.news
  .container-l
    // section header
    .section-header(data-aos="fade")
      .container-l__inner
        .section-header__wrapper
          .section-header__name Latest news
          .section-header__link
            a(href="#")
              span See all News
              +svgMono('arrow-right')

    // news content
    .news__content(data-aos="fade-up")
      .news__slider
        .container-l__inner
          .swiper-container.swiper-bullets.swiper-arrows.js-swiper-news
            .swiper-wrapper
              each slide in [1,2,3,4,5]
                // slide
                .swiper-slide
                  // news card
                  a(href="#").news-card.news-card--slide
                    .news-card__image
                      .scaler(style="padding-bottom: "+ (251/370) * 100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_128,c_fill,e_blur:400/v1576427827/LDNSTD/event_card_1.jpg)")
                        img(js-lazy data-src='site/img/event_card_1.jpg' data-srcset='site/img/event_card_1@2x.jpg 2x')
                    .news-card__content(data-aos="fade")
                      .news-card__tag Sports
                      .news-card__timestamp 30 November 2019
                      .news-card__title Headline goes here
                      .news-card__short
                        p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do tempor incididunt ut labore et dolore magna aliqua.

            .swiper-pagination

            .swiper-arrows__container
              .swiper-arrows__wrapper
                .swiper-prev
                  +svgMono('arrow-right')
                .swiper-next
                  +svgMono('arrow-right')
            .section-header__cta-mobile
              a(href="#").btn.btn-primary
                span See all News
                +svgMono('arrow-right')

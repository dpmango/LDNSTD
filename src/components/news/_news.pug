include ../breadcrumbs/_breadcrumbs

// NEWS
.news.sec-mt-fold-t
  .container-l
    // section header
    .section-header.section-header--titled(data-aos="fade-left")
      .container-l__inner
        .section-header__breadcrumbs
          +breadcrumbs(['Home', 'Our news'])
        h1.section-header__title Our news

// NEWS INNER
.news__inner
  .container-l
    // news filter
    .news-filter
      .news-filter__links
        a(href="#").news-filter__element
          span Most recent
        a(href="#").news-filter__element
          span All subjects
      form.news-filter__search(action="#")
        input(placeholder="Search for a News item")
        button(type="submit")
          +svgMono('search')


// DIRECTIONS
.directions
  .container-l
    // section header
    .section-header.section-header--gray(data-aos="fade")
      .container-l__inner
        .section-header__wrapper
          .section-header__name Plan your visit
  .directions__content
    .directions__nav
      .directions__nav-element(data-aos="fade-up")
        a(href="#").dirnav
          .dirnav__icon
            +svgMono('location')
          .dirnav__content
            .dirnav__link
              span Getting here
              +svgMono('arrow-right')
            .dirnav__description Sed do eiusmod tempor
      .directions__nav-element(data-aos="fade-up")
        a(href="#").dirnav
          .dirnav__icon
            +svgMono('info')
          .dirnav__content
            .dirnav__link
              span Visitor info
              +svgMono('arrow-right')
            .dirnav__description Sed do eiusmod tempor
      .directions__nav-element(data-aos="fade-up")
        a(href="#").dirnav
          .dirnav__icon
            +svgMono('food')
          .dirnav__content
            .dirnav__link
              span Eat & drink
              +svgMono('arrow-right')
            .dirnav__description Sed do eiusmod tempor
      .directions__nav-element(data-aos="fade-up")
        a(href="#").dirnav
          .dirnav__icon
            +svgMono('stadium')
          .dirnav__content
            .dirnav__link
              span The Stadium
              +svgMono('arrow-right')
            .dirnav__description Sed do eiusmod tempor

    .directions__map
      .directions__map-container.directions__map-container--collumned
        .js-gmap(data-center="51.538663, -0.013461" data-zoom="15")
      .directions__overlay
        .container
          .row.no-gutters
            .col-12.col-lg-6.offset-lg-6
              .directions__info.js-stick-to-window(data-position="right" data-keep-container="true" data-stop="<992")
                .row.no-gutters
                  .col-12.col-lg-8.offset-lg-2
                    // DIRINFO
                    .dirinfo
                      .dirinfo__contents(data-aos="fade-up")
                        .dirinfo__crumb Next event

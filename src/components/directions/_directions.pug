                        .dirinfo__title West Ham vs <br/>Tottenham Hotspur
                      .dirinfo__nav(data-aos="fade-up")
                        a(href="#").dirinfo__nav-link
                          .dirinfo__nav-icon
                            +svgMono('tickets')
                          .dirinfo__nav-title Book Tickets
                        a(href="#").dirinfo__nav-link
                          .dirinfo__nav-icon
                            +svgMono('clock')

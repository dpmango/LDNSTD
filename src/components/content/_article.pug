                    .article__tag.js-stick-to-window(data-aos="fade") Sports
                .swiper-slide
                  .article__main-image
                    .scaler(style="padding-bottom: "+ (664/1200) * 100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_128,c_fill,e_blur:400/v1576674356/LDNSTD/article_image.jpg)")
                      video(js-lazy loop muted autoplay playsinline)
                        data-poster(src='img/hero_event.jpg')
                        data-src(src="video/fifa.mp4" type="video/mp4")
                        data-src(src="video/fifa.webm" type="video/webm")
                        //- source(src="/video/test-video.ogg" type="video/ogg")
                    .article__tag.js-stick-to-window(data-aos="fade") Video slide
                .swiper-slide
                  .article__main-image
                    .scaler(style="padding-bottom: "+ (664/1200) * 100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_128,c_fill,e_blur:400/v1576674356/LDNSTD/article_image.jpg)")
                      img(js-lazy data-src='img/article_image.jpg' data-srcset='img/article_image@2x.jpg 2x')
                    .article__tag.js-stick-to-window(data-aos="fade") Sports

              .swiper-pagination


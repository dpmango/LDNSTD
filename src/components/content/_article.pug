include ../breadcrumbs/_breadcrumbs

// CONTENT
.content.bg-gray
  .container-l
    .content__wrapper
      .container-l__inner
        .content__breadcrumbs(data-aos="fade-up")
          +breadcrumbs(['Home', 'Our news', 'Headline goes here'], 'blue')

        // Article
        article.article
          // article slide
          .article__slider
            .swiper-container.swiper-bullets.js-swiper-article
              .swiper-wrapper
                .swiper-slide
                  .article__main-image
                    .scaler(style="padding-bottom: "+ (664/1200) * 100 +"%; background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_128,c_fill,e_blur:400/v1576674356/LDNSTD/article_image.jpg)")
